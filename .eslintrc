{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "semi": 2,
    "strict": 2,
    "eqeqeq": 2,
    "no-var": 2,
    "no-useless-constructor": 2,
    "no-const-assign": 2,
    "prefer-const": 2,
    "prefer-spread": 2,
    "no-this-before-super": 2,
    "no-dupe-class-members": 2,
    "no-confusing-arrow": 2
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jasmine": true,
    "phantomjs": true,
    "mongo": true
  }
}